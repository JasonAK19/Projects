  */
  
  mapTiles = new PImage[3];
  
  mapTiles[0] = loadImage("maptiles/tile_0036.png");
  mapTiles[1] = loadImage("maptiles/tile_0028.png");
  mapTiles[2] = loadImage("maptiles/tile_0076.png");
 
 
